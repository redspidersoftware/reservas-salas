@model ReservasSalas.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Crear Cuenta</h2>

        @* Mensajes de TempData *@
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">
                @TempData["Mensaje"] <br />
                ðŸ“§ Revisa tu correo para confirmar tu cuenta.
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Mail" class="form-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Portal" class="form-label"></label>
                <select asp-for="Portal" class="form-select">
                    <option value="">Selecciona...</option>
                    @for (int i = 1; i <= 9; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Portal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Piso" class="form-label"></label>
                <select asp-for="Piso" class="form-select">
                    <option value="">Selecciona...</option>
                    <option value="B">B</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <span asp-validation-for="Piso" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Letra" class="form-label"></label>
                <select asp-for="Letra" class="form-select">
                    <option value="">Selecciona...</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                <span asp-validation-for="Letra" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">ContraseÃ±a</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Registrarse</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Auth">Â¿Ya tienes cuenta? Inicia sesiÃ³n</a>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
